{{#if editable}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-3">{{input type="text" class="form-control input_fields" value=menuitem.name}}</div>
    <div class="col-md-6">{{input type="text" class="form-control input_fields" value=menuitem.description}}</div>
    <div class="col-md-1">{{input type="text" class="form-control input_fields" value=menuitem.price}}</div>
    <div class="col-md-1"><button {{action 'saveEdit'}} type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></div>
    <div class="col-md-1"></div>
  </div>
{{else}}
  <div class="row administration_menu_table_div_row">
    <div class="col-md-3">{{menuitem.name}}</div>
    <div class="col-md-6">{{menuitem.description}}</div>
    <div class="col-md-1">{{menuitem.price}}$</div>
    <div class="col-md-1"><button {{action 'edit'}} type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></div>
    <div class="col-md-1"><button {{action 'deleteItem' menuitem.id}} type="button" class="btn btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></div>
  </div>
{{/if}}

